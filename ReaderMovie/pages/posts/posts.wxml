<view>
  <swiper indicator-dots="true" autoplay="true" interval="3000" indicator-color="#ccc">
    <swiper-item>
      <image src="../../images/book.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="../../images/coco.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="../../images/party.jpg"></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{post_key}}" wx:for-item="item" wx:key="item">
    <view class="post-container">
      <view class="post-author-date">
        <image class="post-author" src="{{item.author_img}}"></image>
        <text class="post-date">{{item.date}}</text>
      </view>
      <text class="post-title">{{item.title}}</text>
      <image class="post-image"src="{{item.post_img}}"></image>
      <text class="post-content">{{item.content}}</text>
      <view class="post-like">
        <image class="post-like-image"src="../icon/view.png"></image>
        <text class="post-like-font">{{item.view_num}}</text>
        <image class="post-like-image" src="../icon/chat.png"></image>
        <text class="post-like-font">{{item.collect_num}}</text>
      </view>
    </view>
  </block>
</view>